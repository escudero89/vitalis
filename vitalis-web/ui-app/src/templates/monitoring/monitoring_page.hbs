<div class="app-container">
<h5 class="subheader">Información del paciente</h5>
    <ul class="collection">
    <li class="collection-item avatar">
        <img src="{{ patient.picture_url }}" alt="" class="circle">
        <span class="title">{{ patient.name }}</span>
        {{#if patient.height}}
        	<p>{{measure patient.height 'height'}}</p>
        {{/if}}
        {{#if patient.weight}}
        	<p>{{measure patient.weight 'weight'}}</p>
        {{/if}}
        
        <p>{{patient.blood_type}} {{patient.blood_factor}}</p>
    </li>
</ul>

<h5 class="subheader">Información de monitoreo</h5>
<div id="sensors">
</div>

</div>